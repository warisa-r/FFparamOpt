# Initialize LAMMPS
units           lj
dimension       3
boundary        p p p
atom_style      atomic

# Set lattice constant and create box
lattice         custom 54.11 origin 0 0 0 basis 0.0 0.0 0.0 basis 0.5 0.5 0.5
region          box block 0 10 0 10 0 10
create_box      2 box

# Define atom types
pair_style      lj/cut 2.5
pair_coeff      1 1 1.0 1.0 2.5    # Ce-Ce
pair_coeff      2 2 1.0 1.0 2.5    # O-O
pair_coeff      1 2 1.0 1.0 2.5    # Ce-O

# Create atoms
create_atoms    1 single 0.0 0.0 0.0
create_atoms    2 single 0.5 0.5 0.5

# Create more atoms
replicate       1 1 1
create_atoms    1 single 0.25 0.25 0.25
create_atoms    2 single 0.75 0.75 0.75

# Set masses
mass            1 140.0
mass            2 16.0

# Define settings
velocity        all create 1.0 87287
fix             1 all nve
thermo          100
thermo_style    custom step pe lx ly lz press pxx pyy pzz
dump            1 all xyz 1000 dump.xyz
run             0

# Minimize energy
min_style       cg
minimize        1e-6 1e-6 1000 10000

# Output final configuration and energy
write_data      final_config.data
