# first try with lammps

# ------------------- INITIALIZATION -----------------------
units           lj
dimension       3
boundary        p   p   p
atom_style      atomic

# -------------------- VARIABLES ---------------------------
variable latparam equal 1.53
variable material string C

# -------------------- ATOM DEFINITION ---------------------
lattice         fcc ${latparam}
# simple cubic(sc); body-centered cubic(bcc); face centered cubic(fcc);
# hexagonal close packed(hcp); diamond cubic(diamond); square lattice(sq); costom
region          box block 0 5 0 5 0 5
create_box      3 box

lattice         fcc ${latparam} orient x 1 0 0 orient y 0 1 0 orient z 0 0 1
create_atoms    1 box
mass            1 1.0
mass            2 1.0
mass            3 1.0

# --------------------- INTERATOMIC POTENTIAL ---------------
pair_style      lj/cut 2.5
pair_coeff      * * 1.0 1.0 2.5
velocity        all create 1.0 81193
# --------------------- RUN ---------------------------------
timestep        0.003
thermo		    500
fix 1 all nve
run 10000

# --------------------- VISIUALIZATION ----------------------
dump		1 all atom 500 dump.test.lammpstrj